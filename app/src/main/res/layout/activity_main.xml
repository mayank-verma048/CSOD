<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context="com.goodsamaritan.MainActivity">


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/img_uid"
        android:id="@+id/img_uid"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_uid"
        android:hint="Enter your name"
        android:id="@+id/nameid"
        android:padding="16dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/img_email"
        android:id="@+id/img_email"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/nameid"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email id"
        android:layout_below="@id/nameid"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_toRightOf="@id/img_email"
        android:padding="16dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/img_gender"
        android:id="@+id/img_gender"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/email"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@id/email"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:id="@+id/gender"
        android:layout_toRightOf="@id/img_gender"/>

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gender"
        android:layout_below="@id/email">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_male" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_female" />

    </RadioGroup>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/img_phone"
        android:id="@+id/img_phone"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/radioSex"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/radioSex"
        android:background="@color/colorAccent"
        android:minHeight="32dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="12dp"
        android:text="Send OTP"
        android:id="@+id/send_otp"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/phoneid"
        android:layout_below="@id/radioSex"
        android:layout_toRightOf="@id/img_phone"
        android:layout_toLeftOf="@id/send_otp"
        android:minHeight="56dp"
        android:hint="  Phone Number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_alignParentRight="true"
        android:layout_below="@id/phoneid"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:minHeight="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        android:id="@+id/verify_btn"
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:id="@+id/verify"
        android:layout_toRightOf="@id/img_phone"
        android:layout_toLeftOf="@id/verify_btn"
        android:layout_below="@id/phoneid"
        android:minHeight="56dp"
        android:hint=" OTP"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/img_password"
        android:id="@+id/img_password"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/phoneid"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordid"
        android:layout_below="@id/verify"
        android:layout_toRightOf="@id/img_password"
        android:minHeight="56dp"
        android:hint=" Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_below="@id/passwordid"
        android:layout_centerHorizontal="true"
        android:id="@+id/sign_up_btn"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/verify"
        android:layout_alignParentEnd="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/checkid"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/animated_check"
        android:layout_alignTop="@+id/verify"
        android:layout_alignParentEnd="true"/>

    <!--<com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sign_up_btn"
        android:layout_marginTop="8dp"/>-->


</RelativeLayout>
